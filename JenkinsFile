pipeline {
    agent none 
    stages {
        stage('Build') {
            agent {
                docker 'maven:3.8.1-adoptopenjdk-11'
                args '-v /root/.m2:/root/.m2'
            } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        //stage('Test') {
        //    agent { docker 'openjdk:17-jre' } 
        //    steps {
        //        echo 'Hello, JDK'
        //        sh 'java -version'
        //    }
        //}
    }
}
